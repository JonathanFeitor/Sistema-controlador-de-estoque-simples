@using Model.Entity
@model List<Movement>
@{
    ViewBag.Title = "Report";
}

<div class="panel panel-default">
    <div class="panel-heading">Report</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:500;">Report</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Type", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtType", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Model", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtModel", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Date", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input class="form-control" id="date1" name="date1" type="date" />
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Date", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input class="form-control" id="date2" name="date2" type="date" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div>
                <input class="btn btn-primary btn-lg" type="submit" value="Search" />
            </div>
         }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Type</th>
        <th>Model</th>
        <th>Quantity</th>
        <th>Input/ Output</th>
        <th>User ID</th>
        <th>Date</th>
    </tr>
    @foreach (var objMovement in Model)
    {
        <tr>
            <th>@objMovement.MMType</th>
            <th>@objMovement.MMModel</th>
            <th>@objMovement.MMQtt</th>
            <th>@objMovement.MMUseInf</th>
            <th>@objMovement.MMIdOperator</th>
            <th>@objMovement.MMDate1</th>
        </tr>
    }
    <tr>
    </tr>
</table>