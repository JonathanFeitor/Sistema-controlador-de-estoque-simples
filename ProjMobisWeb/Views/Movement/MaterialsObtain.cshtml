<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

@using Model.Entity
@model List<Materials>

@{
    ViewBag.Title = "Materials Search";
    Layout = null;
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).read(function () {
        $("#tbmaterials tbody tr").dblclick(function () {
            var Materials = {};
            var a, n, m;
            a = Materials.MCode = $(this).children().eq('0').text();
            n = Materials.MType = $(this).children().eq('1').text();
            m = Materials.MModel = $(this).children().eq('2').text();

            console.info(a, n, m);
            window.opener.MaterialsObtain(Materials);
            window.close();
        });
    });

</script>
<div class="panel panel-default">
    <div class="panel-heading">Search materials in the system</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:500;">Search materials</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Type", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtType", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Model", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtModel", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <input class="btn btn-primary btn-lg" type="submit" value="Search" />
        }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Code</th>
        <th>Type</th>
        <th>Model</th>
        <th>Quantity</th>
        <th>Note</th>
        <th>User ID</th>
        <th>Date</th>
        
    </tr>
    @foreach (var objMaterials in Model)
    {
        <tr>
            <th>@objMaterials.MCode</th>
            <th>@objMaterials.MType</th>
            <th>@objMaterials.MModel</th>
            <th>@objMaterials.MQuantity</th>
            <th>@objMaterials.MObservation</th>
            <th>@objMaterials.MIdOperator</th>
            <th>@objMaterials.MDate</th>
            
        </tr>
    }
    <tr></tr>
</table>
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>


