@model Model.Entity.Materials

@{
    ViewBag.Title = "Movement";
}

<h2>@ViewBag.MessageInitialInputExit</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.MCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MType, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MModel, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MModel, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MQAlter, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MQAlter, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MCheck, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <input type="checkbox" name="MCheck" id="MCheck" value="Input" />
                    <label for="Input">Input</label>
                    <br />
                    <input type="checkbox" name="MCheck" id="MCheck" value="Exit" />
                    <label for="Exit">Exit</label>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MIdOperator2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4" dropdown>
                    @Html.DropDownListFor(model => model.MIdOperator2, ViewBag.UserList as SelectList, "Select an ID", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-actions col-md-offset-2">
                <input class="btn btn-primary" type="submit" name="btnsave" value="Save" />|
                @Html.ActionLink("Return to list", "Index")
            </div>

        </fieldset>
    </div>

}

<div class="text-primary text-success text-center">
    @ViewBag.MessageSuccessfullyInputExit
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MessageError
</div>
<script type="text/javascript">
    function checkFieldCode() {
        var code = document.getElementById("MCode");
        if (code.value != null) {
            code.disabled = true;
        }
    }

</script>