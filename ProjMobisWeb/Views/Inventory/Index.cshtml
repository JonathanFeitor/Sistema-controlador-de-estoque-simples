@model List<Model.Entity.Inventory>
@{
    ViewBag.Title = "Inventory List";
}

<h2 class="text-center text-success">Inventory List</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/Inventory/Create">New</a>
    <a class="btn btn-info" href="~/Inventory/SearchInventory">Search</a>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Inventory Number</th>
            <th>Type</th>
            <th>Model</th>
            <th>Serial Number</th>
            <th>Status</th>
            <th>IP</th>
            <th>Location</th>
            <th>Description</th>
            <th>User ID</th>
            <th colspan="3">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objInventory in Model)
        {
        <tr>

            <td>@objInventory.EInventory</td>
            <td>@objInventory.EType</td>
            <td>@objInventory.EModel</td>
            <td>@objInventory.ESNumber</td>
            <td>@objInventory.ESEquipament</td>
            <td>@objInventory.EIP</td>
            <td>@objInventory.ELocation</td>
            <td>@objInventory.EDescription</td>
            <td>@objInventory.EIdOperator</td>
            <td><a class="btn btn-success" href="~/Inventory/Find/@objInventory.EInventory"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Inventory/Update/@objInventory.EInventory"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Inventory/Eliminate/@objInventory.EInventory"><span class="fa fa-book"></span></a></td>
        </tr>
        }
    </tbody>

</table>

