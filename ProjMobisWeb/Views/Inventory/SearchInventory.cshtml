@using Model.Entity
@model List<Inventory>
@{
    ViewBag.Title = "Search Inventory";
}

<div class="panel panel-default">
    <div class="panel-heading">Search equipament in the system</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:500;">Search inventory</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Type", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtType", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Model", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBox("txtModel", null, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </fieldset>
            </div>

            <input class="btn btn-primary btn-lg" type="submit" value="Search" />
        }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Inventory Number</th>
        <th>Type</th>
        <th>Model</th>
        <th>Serial Number</th>
        <th>In use</th>
        <th>IP</th>
        <th>Location</th>
        <th>Note</th>
        <th>User ID</th>
        <th colspan="3">Operation</th>
    </tr>
    @foreach (var objInventory in Model)
    {
        <tr>
            <th>@objInventory.EInventory</th>
            <th>@objInventory.EType</th>
            <th>@objInventory.EModel</th>
            <th>@objInventory.ESNumber</th>
            <th>@objInventory.ESEquipament</th>
             <th>@objInventory.EIP</th>
            <th>@objInventory.ELocation</th>
            <th>@objInventory.EDescription</th>
            <th>@objInventory.EIdOperator</th>
            <td><a class="btn btn-success" href="~/Inventory/Find/@objInventory.EInventory"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Inventory/Update/@objInventory.EInventory"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Inventory/Eliminate/@objInventory.EInventory"><span class="fa fa-book"></span></a></td>

        </tr>
     }
    <tr></tr>
</table>

